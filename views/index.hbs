<!doctype html>
<html ng-app="chat-app">
	<head>
    <title>Chat App{{message}}</title>
	 <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--                            CSS FILES                                                         -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.0.0/semantic.min.css">
    <link rel="stylesheet" href="/css/styles.css" type="text/css">
	</head>

	<body ng-controller="authController">
		<header class="ui sixteen wide column" ng-controller="navController as NavCtrl">
   		<nav class="ui secondary pointing menu blue floating top fixed">
          <a class="item" href="#" ng-class="{ active : isSelected('index')}" ng-click="selectedPage('index')">
            <i class="home icon"></i> Home
          </a>
          <a class="item" href="#/settings" ng-class="{ active : isSelected('settings')}" ng-click="selectedPage('settings')">
            <i class="home icon"></i> Settings
          </a>

          <nav class="right secondary menu">
            <a class="item" href="#/login" ng-hide="authenticated" ng-class="{ active : isSelected('login')}" ng-click="selectedPage('login')">
              <i class="mail icon"></i> Login
            </a>
            <a class="item" href="#/register" ng-hide="authenticated" ng-class="{ active : isSelected('register')}" ng-click="selectedPage('register')">
              <i class="user icon"></i> Register
            </a>
            <a class="item" href ng-click="logout()" ng-show="authenticated">
              <i class="user icon"></i> Logout
            </a>
          </nav>
        </nav>
      </header>

      <section ng-view class="ui grid container"></section>

      <footer>
         <div class="ui inverted segment">
           <p>Chat Application 2015</p>
         </div>
      </footer>

   <!--                            SCRIPT FILES                                                         -->
   <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
   <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.min.js"></script>
   <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-resource.js"></script>
   <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.0.0/semantic.min.js"></script>

    <!--                            CONTROLLERS                                                         -->
    <script src="js/app.js"></script>
    <script src="js/controllers/auth.js"></script>
    <script src="js/controllers/posts.js"></script>
    <script src="js/controllers/settings.js"></script>
	</body>
</html>
